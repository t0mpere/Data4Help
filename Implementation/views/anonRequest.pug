extends layout

block content
    body.text-center
        #request-form
            .container.jumbotron
                .row
                    .col-md-3
                        .figure-caption.text-left
                            h3.font-italic Please complete the following form to make an anonymous request
                            h5.font-italic.font-weight-light Todo add description
                    .col-md-8
                        .container
                            h2 Make a new anonymous Query
                            hr
                            div.form-signin
                                    label(for='title') Title
                                        input#title.form-control(type='text', name='title', placeholder='Enter a title')

                                    label(for='update') Update
                                        select#update.form-control
                                            option(value='0') never
                                            option(value='1') 1 per day
                                            option(value='2') 1 per week
                                            option(value='3') 1 per month
                                    div.form-check
                                        label(for='avg_bp') Data request:

                                        input#avg_bp.form-control.form-check(type='checkbox')
                                        |Average BP
                                        input#avg_bpm_min.form-control.form-check(type='checkbox')
                                        |Average BPM Min
                                        input#avg_bpm_max.form-control.form-check(type='checkbox')
                                        |Average BPM Max

                                    label(for='age_from') Age:
                                        br
                                        label(for='age_from') From:
                                            input#age_from.form-control(type='number', name='age1', value='')
                                        label(for='age_to') To:
                                            input#age_to.form-control(type='number', name='age2', value='')

                                    label(for='date') Period:
                                        br
                                        label(for='date_from') From:
                                            input#date_from.form-control(type='date', name='date1', placeholder='dd/mm/yyyy')
                                        label(for='date_to') To:
                                            input#date_to.form-control(type='date', name='date2', placeholder='dd/mm/yyyy')
                            script.
                                $(document).ready(function() {  document.getElementById('result-form').style.display = 'none';});
                                function check(input) {
                                    let tmp ;
                                    if (!input)
                                        tmp = document.getElementById('date_from').value;
                                    else
                                        tmp = input;

                                    // First check for the pattern
                                    if (!/^\d{1,2}\/\d{1,2}\/\d{4}$/.test(tmp))
                                        return false;

                                    // Parse the date parts to integers
