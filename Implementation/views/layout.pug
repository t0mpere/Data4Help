doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' href='/bootstrap/dist/css/bootstrap.css')
    link(href='/stylesheets/sidebar.css', rel='stylesheet')
    script(src='/bootstrap/dist/js/bootstrap.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')


#wrapper
  // Sidebar
  #sidebar-wrapper
      ul.sidebar-nav
          li.sidebar-brand
              a(href='#') Start Bootstrap
          li
              a(href='#') Dashboard
          li
              a(href='#') Shortcuts
          li
              a(href='#') Overview
          li
              a(href='#') Events
          li
              a(href='#') About
          li
              a(href='#') Services
          li
              a(href='#') Contact
  // /#sidebar-wrapper
  // Page Content
  #page-content-wrapper
      .container-fluid
          header
              a#menu-toggle.btn.btn-secondary(href='#menu-toggle') Toggle Menu
          block content
  // /#page-content-wrapper
  // /#wrapper
  // Menu Toggle Script
  script.
      $("#menu-toggle").click(function (e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
      });


