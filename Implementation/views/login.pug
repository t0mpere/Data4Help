extends layout

block content
    if auth
        body.text-center
            .row
                .col-md-4
                .col-md-4
                    p
                    p
                    form.form-signin(action='/login', method='post')
                        h1.h3.mb-3.font-weight-normal Please sign in
                        p
                        label.sr-only(for='email') Email address
                        input#email.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
                        p
                        label.sr-only(for='password') Password
                        input#password.form-control(type='password', name='password', placeholder='Password', required='')
                        p
                        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

                        t.text-center Not registered?
                        p
                        a.btn.btn-primary.btn-bd-primary(href = '/registration') Register
                .col-md-4

